<%- include("partials/header") %>
<h1>Compose</h1>
<form action="/compose" method="POST" class="form-group">
    <div class="form-group mr-3 groups">
        <label for="postTitleBox">Title</label>
        <input class="form-control title" id="postTitleBox" type="text" name="newPostTitle" autocomplete="off">
    </div>

    <div class="form-group mr-3 groups">
        <label for="postEditBox">Post</label>
        <textarea class="form-control post" id="postEditBox" name="newPostContent" rows="6" autocomplete="off"></textarea>
    </div>

    <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

<%- include("partials/footer") %>